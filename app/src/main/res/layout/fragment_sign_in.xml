<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentSignIn"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/red_500"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="User Name"
            android:layout_marginTop="40dp"
            app:errorEnabled="true">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtsusername"
                android:paddingTop="40dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="125dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_horizontal"
                android:paddingStart="18dp"
                android:textSize="12sp"/>
            <RadioGroup
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radgend">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radmale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Male"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radfmale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Female"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radother"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Other"
                    android:textSize="12sp" />
            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Password"
            android:layout_marginTop="195dp"
            app:errorEnabled="true">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtspass"
                android:inputType="textPassword"
                android:paddingTop="40dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Confirm Password"
            android:layout_marginTop="280dp"
            app:errorEnabled="true">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtscpass"
                android:inputType="textPassword"
                android:paddingTop="40dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                />


        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonbg"
            android:fontFamily="@font/poppins_bold"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>